<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProfesorController</servlet-name>
        <servlet-class>controller.PostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComentariosController</servlet-name>
        <servlet-class>controller.ComentariosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostController</servlet-name>
        <servlet-class>controller.PostController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfesorController</servlet-name>
        <url-pattern>/Profesor/ingresar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfesorController</servlet-name>
        <url-pattern>/Profesor/eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfesorController</servlet-name>
        <url-pattern>/Profesor/buscar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfesorController</servlet-name>
        <url-pattern>/Profesor/modificar</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/Post/ingresar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/Post/buscar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/Post/modificar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/Post/eliminar</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ComentariosController</servlet-name>
        <url-pattern>/Comentarios/ingresar</url-pattern>
    </servlet-mapping>

    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
